    image: "/images/services/software-engineering.jpg"
  },
  {
    icon: "‚òÅÔ∏è",
    title: "Cloud Computing",
    description: "Scalable, secure, and cost-effective cloud infrastructure design and implementation.",
    link: "/services/cloud-computing",
    image: "/images/services/cloud-computing.jpg"
  },
  {
    icon: "ü§ñ",
    title: "AI Solutions",
    description: "Leverage the power of artificial intelligence and machine learning to unlock insights and automate processes.",
    link: "/services/ai-solutions",
    image: "/images/services/ai-solutions.jpg"
  },
  {
    icon: "üìä",
    title: "Data Engineering",
    description: "Transform raw data into valuable business intelligence with robust data pipelines and analytics.",
    link: "/services/data-engineering",
