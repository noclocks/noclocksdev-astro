---
// Define service cards data for easy maintainability
const services = [
  {
    icon: "üíª",
    title: "Software Engineering",
    description: "Custom software solutions built with modern technologies to solve your complex business challenges."
  },
  {
    icon: "‚òÅÔ∏è",
    title: "Cloud Architecture",
    description: "Scalable, secure, and cost-effective cloud infrastructure design and implementation."
  },
  {
    icon: "ü§ñ",
    title: "AI Solutions",
    description: "Leverage the power of artificial intelligence and machine learning to unlock insights and automate processes."
  },
  {
    icon: "üìä",
    title: "Data Engineering",
    description: "Transform raw data into valuable business intelligence with robust data pipelines and analytics."
  }
];

const { title = "Our Services" } = Astro.props;
---

<section class="services-highlight">
  <div class="container">
    <h2 class="section-title">{title}</h2>

    <div class="services-grid">
      {services.map((service) => (
        <div class="service-card">
          <div class="service-icon">{service.icon}</div>
          <h3 class="service-title">{service.title}</h3>
          <p class="service-description">{service.description}</p>
          <a href="/services" class="service-link">Learn more</a>
        </div>
      ))}
    </div>

    <div class="services-cta">
      <a href="/services" class="services-button">View All Services</a>
    </div>
  </div>
</section>

<style lang="scss">
  .services-highlight {
    padding: 5rem 0;
    background-color: #111;

    .section-title {
      text-align: center;
      font-size: 2.5rem;
      margin-bottom: 3rem;
      position: relative;

      &::after {
        content: '';
        display: block;
        width: 80px;
        height: 3px;
        background: #0af;
        margin: 1rem auto 0;
      }
    }

    .services-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 2rem;
      margin-bottom: 3rem;
    }

    .service-card {
      background: rgba(255, 255, 255, 0.05);
      border-radius: 8px;
      padding: 2rem;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      display: flex;
      flex-direction: column;
      height: 100%;

      &:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0, 170, 255, 0.1);
      }
    }

    .service-icon {
      font-size: 3rem;
      margin-bottom: 1rem;
    }

    .service-title {
      font-size: 1.5rem;
      margin-bottom: 1rem;
      color: #fff;
    }

    .service-description {
      color: #ccc;
      line-height: 1.6;
      margin-bottom: 1.5rem;
      flex-grow: 1;
    }

    .service-link {
      color: #0af;
      text-decoration: none;
      font-weight: 500;
      display: inline-flex;
      align-items: center;

      &::after {
        content: "‚Üí";
        margin-left: 0.5rem;
        transition: transform 0.2s ease;
      }

      &:hover::after {
        transform: translateX(5px);
      }
    }

    .services-cta {
      text-align: center;
      margin-top: 2rem;
    }

    .services-button {
      background: #0af;
      color: white;
      padding: 0.75rem 2rem;
      border-radius: 4px;
      text-decoration: none;
      font-weight: 500;
      display: inline-block;
      transition: background 0.2s ease;

      &:hover {
        background: #08c;
      }
    }
  }

  @media (max-width: 768px) {
    .services-highlight {
      padding: 3rem 0;

      .section-title {
        font-size: 2rem;
      }

      .services-grid {
        grid-template-columns: 1fr;
      }
    }
  }
</style>
