---
const { activeLink = "/" } = Astro.props;
---

<nav class="site-nav">
  <div class="container">
    <a href="/" class="nav-logo">
      <img src="/images/noclocks-logo-wordmark-white.svg" alt="No Clocks" height="40">
    </a>
    <div class="nav-links">
      <a href="/" class={activeLink === "/" ? "active" : ""}>Home</a>
      <a href="/about" class={activeLink === "/about" ? "active" : ""}>About</a>
      <a href="/services" class={activeLink === "/services" ? "active" : ""}>Services</a>
      <a href="/contact" class={activeLink === "/contact" ? "active" : ""}>Contact</a>
    </div>
  </div>
</nav>

<style lang="scss">
  .site-nav {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 100;
    background: rgba(0, 0, 0, 0.8);
    backdrop-filter: blur(10px);
    padding: 1rem 0;

    .container {
      display: flex;
      align-items: center;
      justify-content: space-between;
    }

    .nav-logo {
      display: flex;
      align-items: center;

      img {
        max-height: 40px;
        width: auto;
      }
    }

    .nav-links {
      display: flex;
      gap: 2rem;

      a {
        color: #fff;
        text-decoration: none;
        font-weight: 500;
        font-size: 1rem;
        position: relative;
        transition: color 0.2s ease;

        &:hover, &.active {
          color: #0af;
        }

        &.active::after {
          content: '';
          position: absolute;
          left: 0;
          right: 0;
          bottom: -5px;
          height: 2px;
          background-color: #0af;
        }
      }
    }
  }

  @media (max-width: 768px) {
    .site-nav {
      .container {
        flex-direction: column;
        gap: 1rem;
      }

      .nav-links {
        gap: 1rem;

        a {
          font-size: 0.9rem;
        }
      }
    }
  }
</style>
