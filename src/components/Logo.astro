---
const {
    src = "/images/noclocks-logo.png",
    alt = "No Clocks, LLC Logo",
    caption = "No Clocks, LLC",
    size = 96,
} = Astro.props;
---

<figure class="hero-logo">
    <img
        src={src}
        alt={alt}
        width={size}
        height={size}
        class="hero-logo-image"
        loading="eager"
        decoding="async"
    />
    <figcaption class="hero-logo-caption">{caption}</figcaption>
</figure>
